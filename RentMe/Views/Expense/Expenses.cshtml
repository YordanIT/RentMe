@model IEnumerable<RentMe.Core.Models.ExpenseListViewModel>

@{
    ViewData["Title"] = "Expenses";
}

<p>
     @Html.ActionLink("ADD EXPENSES", "AddExpense", "Expense", Model.First(), null)
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rent)
            </th>
            <th>
                Entrance Fee
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Heating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Water)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Electricity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Other)
            </th>
            <th>
                Total
            </th>
            <th>
                Paid
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                Mark
            </th>
            <th>
                Delete
            </th>
	        <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntranceFee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Heating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Water)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Electricity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Other)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPaid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.ActionLink("Paid", "EditExpense", "Expense", item, null) 
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteExpense", "Expense", item, null)
            </td>
        </tr>
}
    </tbody>
</table>
