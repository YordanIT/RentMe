@model RentMe.Core.Models.ExpenseFormModel

@{
    ViewData["Title"] = "New Expenses";
}

<h3>You still don't have any expenses</h3>
<h3>Add your first expenses</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateExpense">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Rent" class="control-label"></label>
                <input asp-for="Rent" class="form-control" />
                <span asp-validation-for="Rent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EntranceFee" class="control-label"></label>
                <input asp-for="EntranceFee" class="form-control" />
                <span asp-validation-for="EntranceFee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Heating" class="control-label"></label>
                <input asp-for="Heating" class="form-control" />
                <span asp-validation-for="Heating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Water" class="control-label"></label>
                <input asp-for="Water" class="form-control" />
                <span asp-validation-for="Water" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Electricity" class="control-label"></label>
                <input asp-for="Electricity" class="form-control" />
                <span asp-validation-for="Electricity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Other" class="control-label"></label>
                <input asp-for="Other" class="form-control" />
                <span asp-validation-for="Other" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                Tenant Email : 
                <select asp-for="TenantEmail" asp-items="ViewBag.Tenants" class="custom-select"></select> 
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="button" />
            </div>
        </form>
    </div> 
</div>
<br/>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
